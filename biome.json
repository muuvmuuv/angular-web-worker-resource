{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!**/*.html"]
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							":URL:",
							":NODE:",
							":PACKAGE:",
							":PACKAGE_WITH_PROTOCOL:",
							":BLANK_LINE:",
							":ALIAS:",
							":BLANK_LINE:",
							":PATH:"
						]
					}
				}
			}
		}
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true
	},
	"linter": {
		"enabled": true,
		"domains": {
			"project": "none"
		},
		"rules": {
			"recommended": true,
			"a11y": "error",
			"nursery": {
				"recommended": true
			},
			"performance": "error",
			"security": "error",
			"style": "error",
			"correctness": "error",
			"complexity": "error",
			"suspicious": "error"
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	},
	"json": {
		"formatter": { "enabled": true }
	}
}
